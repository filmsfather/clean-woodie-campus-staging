{
  "name": "clean-woodie-campus",
  "version": "1.0.0",
  "description": "Clean Architecture based Learning Management System",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r run build",
    "build:staging": "NODE_ENV=staging pnpm -r run build:staging",
    "build:production": "NODE_ENV=production pnpm -r run build:production",
    "dev": "pnpm -r --parallel run dev",
    "test": "pnpm -r run test",
    "test:unit": "pnpm -r run test",
    "test:integration": "vitest run --config tests/vitest.config.ts",
    "test:integration:watch": "vitest --config tests/vitest.config.ts",
    "test:all": "pnpm run test:unit && pnpm run test:integration",
    "lint": "pnpm -r run lint",
    "type-check": "pnpm -r run type-check",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-onboarding": "^9.1.3",
    "@storybook/react-vite": "^9.1.3",
    "@supabase/supabase-js": "^2.38.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.55.0",
    "eslint-plugin-storybook": "^9.1.3",
    "express": "^4.18.0",
    "prettier": "^3.1.0",
    "storybook": "^9.1.3",
    "supertest": "^7.1.4",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

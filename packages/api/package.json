{
  "name": "@woodie/api",
  "version": "1.0.0",
  "description": "API server - Express.js backend",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc --build",
    "build:vercel": "npm run clean && tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "vercel-build": "npm run build:vercel"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "@woodie/application": "workspace:*",
    "@woodie/domain": "workspace:*",
    "@woodie/infrastructure": "workspace:*",
    "compression": "^1.8.1",
    "cors": "^2.8.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.0.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}